apiVersion: v1
kind: Pod
metadata:
  name: prometheus-csv-metrics-collector
  namespace: {{ prometheus_csv_namespace }}
spec:
  containers:
    - name: collector
      image: busybox:1.28
      command: ["/bin/sh", "-c", "ping localhost"]
      volumeMounts:
        - name: prometheus-csv-storage
          mountPath: /app/csv
  volumes:
    - name: prometheus-csv-storage
      persistentVolumeClaim:
        claimName: prometheus-csv-pvc