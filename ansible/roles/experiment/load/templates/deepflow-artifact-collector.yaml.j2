apiVersion: v1
kind: Pod
metadata:
  name: deepflow-artifact-collector
  namespace: {{ loki_json_namespace }}
spec:
  containers:
    - name: collector
      image: busybox:1.28
      command: ["/bin/sh", "-c", "ping localhost"]
      volumeMounts:
        - name: deepflow-artifact-storage
          mountPath: /app/artifact
  volumes:
    - name: deepflow-artifact-storage
      persistentVolumeClaim:
        claimName: deepflow-artifact-pvc